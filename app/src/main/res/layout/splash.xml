<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lowerbgjpg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textlogo1"
        android:layout_width="303dp"
        android:layout_height="91dp"
        android:layout_marginTop="212dp"
        android:fontFamily="@font/knewave"
        android:text="CashSlash"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textlogo2"
        android:layout_width="292dp"
        android:layout_height="57dp"
        android:layout_marginBottom="224dp"
        android:fontFamily="@font/kodchasan"
        android:text="Manage your out flow"
        android:textAlignment="center"
        android:textColor="#510063"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/logoimg"
        android:layout_width="258dp"
        android:layout_height="205dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.517"
        app:srcCompat="@drawable/rebg" />

</androidx.constraintlayout.widget.ConstraintLayout>